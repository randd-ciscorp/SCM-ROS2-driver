<?xml version="1.0" encoding="UTF-8" ?>
<CycloneDDS xmlns="https://cdds.io/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Domain id="any">
        <General>
	    <MaxMessageSize>5000B</MaxMessageSize> 
	    <FragmentSize>5000B</FragmentSize>
	    <Transport>udp</Transport>
	    <AllowMulticast>true</AllowMulticast>
        </General>
        <Internal>
            <SocketReceiveBufferSize min="20MB"/>
      	    <Watermarks>
        	<WhcHigh>5MB</WhcHigh>
      	    </Watermarks>
        </Internal>
    <Tracing>
      <Verbosity>finer</Verbosity>
      <OutputFile>stderr</OutputFile> <!-- or use a file path -->
    </Tracing>
    </Domain>
</CycloneDDS>

